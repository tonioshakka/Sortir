{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1>Participant</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ participant.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ participant.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ participant.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ participant.prenom }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ participant.telephone }}</td>
        </tr>
        <tr>
            <th>Actif</th>
            <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_participant_index') }}">back to list</a>
    {% endif %}

    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">edit</a>

    {{ include('participant/_delete_form.html.twig') }}
{% endblock %}