{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="form-container">
        <h1 class="former-titre">Reset le mot de passe</h1>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entré votre mail et cliquer sur Réinitialiser le mot
                    passe, vous recevrez un mail avec un nouveau mot de
                    passe
                </small>
            </div>
        {{ form_end(requestForm) }}
    </div>
    <div class="placer_btn">
        <button class="create_rouge">Réinitialiser le mot passe</button>
    </div>
{% endblock %}
