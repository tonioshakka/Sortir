{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="form-container">
        <h1 class="former-titre">Réinitialisation du mot de passe</h1>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre mail et cliquez sur Réinitialiser le mot de
                    passe, vous recevrez un mail avec un nouveau mot de
                    passe.
                </small>
            </div>
        <div class="placer_btn">
            <button type="submit" class="create_rouge">Réinitialisation du mot de passe</button>
        </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
